{
  "compilerOptions": {
    "outDir": "./build",
    "module": "CommonJS",
    "target": "es2016",
    "lib": [
      "es2017.object",
      "es2016",
      "es2015"
    ],
    "sourceMap": true,
    "allowJs": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./src",
      "../../grader/build"
    ],
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/__tests__"
  ],
  "types": [
    "typePatches"
  ]
}
